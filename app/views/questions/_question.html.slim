.mdl-card.mdl-shadow--2dp.card-wide
  .mdl-card__title
    .mdl-card__title-text= question.title
  .mdl-card__supporting-text= question.description
  .mdl-card__actions.mdl-card--border
    = link_to 'Go to see this', question_path(question), class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'
    = link_to 'Edit this', edit_question_path(question), class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect'
    = link_to 'Delete this', "/questions/#{question.id}", class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect', method: :delete
  .mdl-card__menu
    span.mdl-badge data-badge="#{question.keeps_count}" Keeps
    span.mdl-badge data-badge="#{question.count_answered_users}" answered users
