.content
  .container-fluid
    .row
      .col-md-9
        article.main-content
          h2.title
            | 【解答】
            = @question.title
          h3.description= @question.description
          p.user-info.clearfix
            = render partial: 'common/article_info', locals: { content: @answer }
          .article-content
            = markdown(@answer.sentence).html_safe
          .act-to-answer
            = link_to question_path(@answer.question) do
                i.fa.fa-arrow-right
                | 問題を見る
